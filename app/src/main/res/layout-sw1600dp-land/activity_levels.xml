<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelsActivity">

    <Button
        android:id="@+id/hardButton"
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/green_difficulty_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/difficulty_hard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mediumButton" />

    <Button
        android:id="@+id/mediumButton"
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/green_difficulty_button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/difficulty_medium"
        app:layout_constraintBottom_toTopOf="@+id/hardButton"
        app:layout_constraintEnd_toEndOf="@+id/hardButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/hardButton"
        app:layout_constraintTop_toBottomOf="@+id/lowButton" />

    <Button
        android:id="@+id/lowButton"
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/green_difficulty_button"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/difficulty_low"
        app:layout_constraintBottom_toTopOf="@+id/mediumButton"
        app:layout_constraintEnd_toEndOf="@+id/mediumButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/mediumButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/lowButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green_ellipse_big" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="263dp"
        android:layout_marginBottom="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mediumButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/green_ellipse_big" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hardButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/green_ellipse_big" />

</androidx.constraintlayout.widget.ConstraintLayout>