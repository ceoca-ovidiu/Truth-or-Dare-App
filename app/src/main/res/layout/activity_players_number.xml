    <TextView
        android:id="@+id/playersNumberTextView"
        android:layout_width="229dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:lines="2"
        android:text="@string/how_many_2_15"
        android:textColor="#ff8000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/playersNumberEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:background="#22566b"
        android:textColor="#ffffff"
        android:hint="Number of Players"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playersNumberTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>