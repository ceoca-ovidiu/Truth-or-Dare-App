<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popUpConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_pop_up_activity_portrait">

    <TextView
        android:id="@+id/giveUpTextView"
        android:layout_width="206dp"
        android:layout_height="69dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/green_simple_text_view"
        android:gravity="center"
        android:text="@string/give_up"
        android:textColor="@color/blueSaphire"
        android:textSize="@dimen/text_view_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/viridian_green_stroke_rounded_button"
        android:text="@string/yes"
        android:textColor="@color/blueSaphire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giveUpTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>

