<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopUpTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="green_button_style">
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
        <item name="android:textColor">@color/blueSaphire</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="green_edit_text_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blueSaphire</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/viridian_green_stroke_rounded_text_view</item>
    </style>

</resources>
