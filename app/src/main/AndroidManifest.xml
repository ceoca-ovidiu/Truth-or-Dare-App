<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.truthordare">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".PlayersNumberActivity" />
        <activity android:name=".EndActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HardActivity" />
        <activity android:name=".MediumActivity" />
        <activity android:name=".LowActivity" />
        <activity android:name=".LevelsActivity" />
        <activity android:name=".EnterPlayersActivity" />
        <activity
            android:name=".PopUpActivity"
            android:theme="@style/AppTheme.PopUpTheme" />
    </application>
</manifest>